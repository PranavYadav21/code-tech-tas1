#include <stdio.h>

int main() {
    int score = 0;
    int answer;

    printf("Welcome to the Quiz Game!\n");

    // Question 1
    printf("\nQ1. What is the capital of France?\n");
    printf("1. Berlin\n2. Madrid\n3. Paris\n4. Rome\n");
    printf("Enter your answer (1-4): ");
    scanf("%d", &answer);
    if (answer == 3) {
        printf("Correct!\n");
        score++;
    } else {
        printf("Wrong! The correct answer is 3. Paris.\n");
    }

    // Question 2
    printf("\nQ2. Which planet is known as the Red Planet?\n");
    printf("1. Earth\n2. Mars\n3. Jupiter\n4. Venus\n");
    printf("Enter your answer (1-4): ");
    scanf("%d", &answer);
    if (answer == 2) {
        printf("Correct!\n");
        score++;
    } else {
        printf("Wrong! The correct answer is 2. Mars.\n");
    }

    // Question 3
    printf("\nQ3. What is the largest ocean on Earth?\n");
    printf("1. Atlantic Ocean\n2. Indian Ocean\n3. Arctic Ocean\n4. Pacific Ocean\n");
    printf("Enter your answer (1-4): ");
    scanf("%d", &answer);
    if (answer == 4) {
        printf("Correct!\n");
        score++;
    } else {
        printf("Wrong! The correct answer is 4. Pacific Ocean.\n");
    }

    // Final score
    printf("\nYour final score is: %d out of 3\n", score);

    return 0;
}
